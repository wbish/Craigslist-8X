<UserControl
    x:Class="WB.Craigslist8X.View.ContinentPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WB.Craigslist8X.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Tapped="TextBlock_Tapped" Text="US" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Canada" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Europe" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Asia, Pacific and Middle East" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Oceania" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Latin America and Caribbean" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
        <TextBlock Tapped="TextBlock_Tapped" Text="Africa" Style="{StaticResource SubheaderTextStyle}" Margin="0,5,0,5" />
    </StackPanel>
</UserControl>
