<UserControl
    x:Class="WB.Craigslist8X.View.ExpandTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WB.Craigslist8X.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid Width="350" Margin="20,10,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Tip" Style="{StaticResource SettingsHeaderStyle}" />
        
        <TextBlock Grid.Row="1" Text="You can go back to the grid view by clicking the double arrow button at the top left of the screen. To prevent collapsing to the list view when selecting an item turn off &quot;Collapse on selection&quot; from the grid view." 
            Style="{StaticResource BaselineTextStyle}" TextAlignment="Justify" LineHeight="26" FontSize="22" />
    </Grid>
</UserControl>
